mixin header(active_tab)
    nav.navbar.navbar-default
        div.container-fluid
            div.navbar-header
                a.navbar-brand(href="javascript:void(0)") Invoice2Excel

            if user
                ul.nav.navbar-nav.navbar-right
                    each tab in ['dashboard', 'invoices', 'logout']
                        if tab == active_tab
                            li.active
                                a(href="/" + tab) #{tab.toUpperCase()}
                        else
                            li
                                a(href="/" + tab) #{tab.toUpperCase()}

            else
                ul.nav.navbar-nav.navbar-right
                    each tab in ['login', 'signup']
                        if tab == active_tab
                            li.active
                                a(href="/" + tab) #{tab.toUpperCase()}
                        else
                            li
                                a(href="/" + tab) #{tab.toUpperCase()}